<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MusicPlayer" parent="AppTheme" />

    <style name="MusicPlayer.LottieAnimationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="MusicPlayer.Button">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/green_standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MusicPlayer.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Title.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MusicPlayer.Home" />

    <style name="MusicPlayer.Home.Navigation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="MusicPlayer.Home.Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MusicPlayer.Home.Search.Hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawableLeft">@null</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result">
        <item name="android:drawableLeft">@null</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Category">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Song" />

    <style name="MusicPlayer.Home.Search.Result.Song.AlbumCover">
        <item name="android:layout_width">@dimen/size_album_cover</item>
        <item name="android:layout_height">@dimen/size_album_cover</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Song.Name">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
