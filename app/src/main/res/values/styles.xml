<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MusicPlayer" parent="AppTheme" />

    <style name="MusicPlayer.LottieAnimationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MusicPlayer.Selectable">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MusicPlayer.Button">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/green_standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MusicPlayer.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Title.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MusicPlayer.Home" />

    <style name="MusicPlayer.Home.Navigation">
        <item name="android:background">@android:color/white</item>
        <item name="itemIconTint">@android:color/black</item>
        <item name="itemTextColor">@android:color/black</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="MusicPlayer.Home.Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MusicPlayer.Home.Search.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:paddingLeft">@dimen/padding_standard</item>
        <item name="android:paddingRight">@dimen/padding_standard</item>
        <item name="android:drawableLeft">@null</item>
    </style>

    <style name="MusicPlayer.Home.Search.Hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawableLeft">@null</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result">
        <item name="android:drawableLeft">@null</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Category">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Song">
        <item name="singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Song.AlbumCover">
        <item name="android:layout_width">@dimen/size_album_cover</item>
        <item name="android:layout_height">@dimen/size_album_cover</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Song.Name">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Song.Album">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Song.Year">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Album" />

    <style name="MusicPlayer.Home.Search.Result.Album.Cover">
        <item name="android:layout_width">@dimen/size_album_cover_album</item>
        <item name="android:layout_height">@dimen/size_album_cover_album</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Album.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_text_album_name</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Album.Artist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_album_artist</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Album.Year">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/size_text_album_year</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Artist" />

    <style name="MusicPlayer.Home.Search.Result.Artist.Image">
        <item name="android:layout_width">@dimen/size_image_cover</item>
        <item name="android:layout_height">@dimen/size_image_cover</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Artist.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_text_album_name</item>
    </style>

    <style name="MusicPlayer.Home.Search.Result.Artist.Genres">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/size_text_album_year</item>
    </style>

    <style name="MusicPlayer.MyMusic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MusicPlayer.MyMusic.Title">
        <item name="android:textSize">@dimen/size_my_music_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MusicPlayer.MyMusic.Categories">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_standard</item>
        <item name="android:paddingBottom">@dimen/padding_standard</item>
        <item name="android:paddingLeft">@dimen/padding_standard</item>
        <item name="android:paddingRight">@dimen/padding_standard</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="MusicPlayer.MyMusic.Recent">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/padding_standard</item>
        <item name="android:layout_marginRight">@dimen/padding_standard</item>
    </style>

    <style name="MusicPlayer.Common" />

    <style name="MusicPlayer.Common.RecyclerView">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="MusicPlayer.Playlist" />

    <style name="MusicPlayer.Playlist.ImageView">
        <item name="android:layout_width">@dimen/size_playlist_cover</item>
        <item name="android:layout_height">@dimen/size_playlist_cover</item>
    </style>

    <style name="MusicPlayer.Playlist.Name">
        <item name="android:textSize">@dimen/size_playlist_title</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MusicPlayer.Artist" />

    <style name="MusicPlayer.Artist.Artwork">
        <item name="android:layout_width">@dimen/size_image_cover</item>
        <item name="android:layout_height">@dimen/size_image_cover</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:layout_marginLeft">@dimen/padding_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <style name="MusicPlayer.Button.Interaction">
        <item name="background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MusicPlayer.Details" />

    <style name="MusicPlayer.Details.Album" />

    <style name="MusicPlayer.Details.Album.Cover">
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MusicPlayer.Details.Album.Name">
        <item name="android:textSize">@dimen/size_text_album_details_name</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Details.Album.ArtistName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MusicPlayer.Details.Album.ReleaseDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MusicPlayer.Details.Album.TrackName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="singleLine">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_text_track_name</item>
    </style>

    <style name="MusicPlayer.Details.Album.SimilarCategories">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_album_details_subcategory</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicPlayer.Details.Album.More" />

    <style name="MusicPlayer.Details.Album.More.Cover">
        <item name="android:layout_width">@dimen/size_more_album_details_cover</item>
        <item name="android:layout_height">@dimen/size_more_album_details_cover</item>
    </style>

    <style name="MusicPlayer.Details.Album.More.ArtistName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MusicPlayer.Details.Album.More.AlbumName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
