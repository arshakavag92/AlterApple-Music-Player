<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="searchhint"
            type="String" />

        <variable
            name="viewmodel"
            type="com.arshak.freeiptv.screens.home.viewmodel.HomeViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_standard">

        <TextView
            android:id="@+id/seachItemTextView"
            style="@style/MusicPlayer.Home.Search.Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{searchhint}" />

    </LinearLayout>

</layout>
