<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="artistattributes"
            type="com.arshak.core.data.network.model.ArtistModel.Attributes" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_container_height"
        android:background="@color/search_result_item_color">


        <TextView
            android:id="@+id/artistNameTextView"
            style="@style/MusicPlayer.Home.Search.Result.Artist.Name"
            android:layout_marginLeft="@dimen/padding_small"
            android:text="@{artistattributes.name}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/genresTextView"
            style="@style/MusicPlayer.Home.Search.Result.Artist.Genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_small"
            android:text="@{artistattributes.genreNames.toString()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/artistNameTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

