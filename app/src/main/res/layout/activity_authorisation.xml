<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.arshak.freeiptv.authentication.viewmodel.AuthorisationViewModel" />

        <variable
            name="activity"
            type="com.arshak.freeiptv.authentication.view.activity.AppleAuthorisationActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/authorisationMessageTextView"
            style="@style/MusicPlayer.Title"
            android:text="@string/message_authorisation" />

        <Button
            android:id="@+id/appleAuthorisationButton"
            style="@style/MusicPlayer.Button"
            android:onClick="@{() -> activity.signInWithAppleCredentials()}"
            android:text="@string/button_authorisation" />

    </LinearLayout>
</layout>

