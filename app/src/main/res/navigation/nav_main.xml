<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.arshak.freeiptv.splash.view.fragment.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/activity_splash">
        <action
            android:id="@+id/action_splashFragment_to_appleAuthorisationActivity"
            app:destination="@id/appleAuthorisationActivity" />
    </fragment>

    <activity
        android:id="@+id/appleAuthorisationActivity"
        android:name="com.arshak.freeiptv.authentication.view.activity.AppleAuthorisationActivity"
        android:label="AppleAuthorisationActivity"
        tools:layout="@layout/activity_authorisation" />

</navigation>